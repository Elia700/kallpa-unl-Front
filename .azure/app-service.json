{
  "name": "kallpa-frontend-app",
  "resourceGroup": "kallpa-rg",
  "location": "East US",
  "runtime": "node:20-lts",
  "os": "linux",
  "sku": "F1",
  "environmentVariables": {
    "NEXT_PUBLIC_API_URL": "https://kallpa-backend-app.azurewebsites.net",
    "NODE_ENV": "production",
    "NEXT_TELEMETRY_DISABLED": "1",
    "NEXT_OUTPUT_STANDALONE": "true",
    "PORT": "3000",
    "HOSTNAME": "0.0.0.0"
  },
  "appSettings": [
    {
      "name": "WEBSITES_PORT",
      "value": "3000"
    },
    {
      "name": "WEBSITE_NODE_DEFAULT_VERSION",
      "value": "~20"
    },
    {
      "name": "SCM_DO_BUILD_DURING_DEPLOYMENT",
      "value": "false"
    },
    {
      "name": "WEBSITE_RUN_FROM_PACKAGE",
      "value": "1"
    },
    {
      "name": "PM2_HOME",
      "value": "/home"
    }
  ],
  "deployment": {
    "source": "github",
    "branch": "main",
    "buildCommand": "npm install && npm run build",
    "startCommand": "npm start"
  },
  "healthCheck": {
    "path": "/health",
    "interval": 300,
    "timeout": 30
  },
  "scaling": {
    "minInstances": 1,
    "maxInstances": 3
  }
}